<Window x:Class="Fracticiel.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="1000" Width="1400">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock x:Name="tb_pos" />
            <TextBlock x:Name="tb_state" />
            <TextBlock x:Name="tb_time" />
        </StackPanel>
        <Viewbox Stretch="UniformToFill" >
            <Image x:Name="image" Height="1000" Width="1000" Stretch="None"
             MouseEnter="image_MouseEnter"
             MouseLeave="image_MouseLeave"
             MouseDown="image_MouseDown"
             MouseUp="image_MouseUp"
             MouseMove="image_MouseMove"
             MouseWheel="image_MouseWheel">
                <Image.LayoutTransform>
                    <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5" />
                </Image.LayoutTransform>
            </Image>
        </Viewbox>
    </DockPanel>
</Window>